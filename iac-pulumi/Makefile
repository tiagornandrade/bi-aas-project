.PHONY: destroy
destroy:
	@echo "ðŸ”¥ Removendo a infraestrutura..."
	@pulumi destroy
	@pulumi stack rm || echo "Stack jÃ¡ removido"
	@echo "âœ… Infraestrutura destruÃ­da!"

.PHONY: help
